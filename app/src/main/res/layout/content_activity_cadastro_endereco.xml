<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".pessoa.gui.CadastroEnderecoActivity"
    tools:showIn="@layout/activity_cadastro_endereco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint=""
            android:visibility="invisible"
            android:inputType="text"
            android:textColor="#FF00A759"

            android:textColorHint="@color/hintColor" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint=""
            android:visibility="invisible"
            android:inputType="text"
            android:textColor="#FF00A759"
            android:textColorHint="@color/hintColor" />
        <EditText
            android:id="@+id/logradouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/hintColor"
            android:hint="Nome da rua"

            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="Número"
            android:inputType="number"
            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="@string/complemento_end"
            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/bairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="Bairro"
            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="@string/cidade_end"

            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/uf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="UF"
            android:textColor="#FF00A759" />

        <EditText
            android:id="@+id/cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:hint="CEP (só numeros)"
            android:textColor="#FF00A759" />

        <Button
            android:id="@+id/cad_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/hintColor"
            android:text="CADASTRAR"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>