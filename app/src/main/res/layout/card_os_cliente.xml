<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    android:contextClickable="true"
    android:focusable="true"
    android:animationCache="false"
    app:cardCornerRadius="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/fragPopUpMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEDICO"
            android:textColor="#24B403"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="10dp" />

        <TextView
            android:id="@+id/fragPopUpMedNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="nome"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpMed"
            tools:layout_editor_absoluteX="10dp" />
        <TextView
            android:id="@+id/fragPopUpMedEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endereco"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpMedNome"
            tools:layout_editor_absoluteX="10dp" />
        <TextView
            android:id="@+id/fragPopUpAval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AvaliacÃ£o"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpMedEnd"/>

        <TextView
            android:id="@+id/fragPopUpAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ANIMAL"
            android:textColor="#26B405"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpAval" />

        <TextView
            android:id="@+id/fragPopUpAnimNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpAnim"
            tools:layout_editor_absoluteX="10dp" />

        <TextView
            android:id="@+id/fragPopUpAnimRaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="raca"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpAnimNome"
            tools:layout_editor_absoluteX="10dp" />

        <TextView
            android:id="@+id/fragPopUpPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="prioridade"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpAnimRaca"
            tools:layout_editor_absoluteX="10dp" />


        <TextView
            android:id="@+id/fragPopUpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="DATA"
            android:textColor="#357A01"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpPrioridade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fragPopSintomas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="VER SINTOMAS"
            android:textColor="#585858"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/fragPopUpPrioridade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>