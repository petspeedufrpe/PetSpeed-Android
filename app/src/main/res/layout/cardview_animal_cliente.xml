<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    style="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    android:contextClickable="true"
    android:animationCache="false"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_animal"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:background="#2d2d2d"
            android:visibility="invisible"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_nome_animal"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_animal"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="98dp"
            android:layout_toEndOf="@+id/image_animal"
            android:text="Nome do Animal" />

        <TextView
            android:id="@+id/txt_raca_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nome_animal"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@+id/image_animal"
            android:text="RaÃ§a do Animal" />

        <TextView
            android:id="@+id/txt_peso_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_raca_animal"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/image_animal"
            android:maxLines="1"
            android:text="Peso do Animal" />

        <TextView
            android:id="@+id/txt_idade_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_peso_animal"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/image_animal"
            android:text="Idade do Animal" />

    </RelativeLayout>
</android.support.v7.widget.CardView>